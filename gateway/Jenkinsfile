pipeline {
    agent any
    environment {
        CI = 'false'
        DOCKER_IMAGE = 'hajewoong/qt-sqace-backend'
        PATH = "$JAVA_HOME/bin:$PATH"
        
    }
    stages {
        stage('test gateway') {
            steps {
                sh '''
                cd gateway
                echo $JAVA_HOME
                echo $PATH
                ./gradlew clean build
                ./gradlew test
                '''
            }
        }
        stage('build docker image'){
            steps{
                sh '''
                cd gateway
                docker build -t ${DOCKER_IMAGE}-gateway:latest .
                '''
            }
        }
    }
    post{
        always{
            sh 'docker image prune -f'
        }   
    }
}
